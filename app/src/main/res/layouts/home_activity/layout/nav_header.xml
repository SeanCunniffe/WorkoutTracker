<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content" android:background="@color/colorPrimaryDark"
              android:paddingBottom="10sp" android:paddingTop="10sp" android:paddingLeft="10sp">

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/userNameTextViewHeader"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1" android:textColor="@color/textColor"
            android:textSize="24sp"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/userWeightTextView"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1" android:textColor="@color/textColor"
            android:textSize="24sp"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/userAgeTextView"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1" android:textColor="@color/textColor"
            android:textSize="24sp"/>
</LinearLayout>