<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content"
                                                   android:id="@+id/backgroundLayout"
>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/exerciseName"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="10dp" android:layout_marginStart="10dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginEnd="10dp" style="@style/moving_text_view"/>
    <TextView
            android:text="Top Set:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="10dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textSize="24sp" android:id="@+id/textView24" app:layout_constraintTop_toTopOf="@+id/guideline14"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textSize="24sp" android:id="@+id/topSetWeight" app:layout_constraintTop_toTopOf="@+id/guideline14"
            app:layout_constraintStart_toEndOf="@+id/textView24" android:layout_marginStart="10dp"
    />
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textSize="24sp" app:layout_constraintTop_toTopOf="@+id/guideline14"
            android:text="@string/kg" app:layout_constraintStart_toEndOf="@+id/topSetWeight"
            android:layout_marginStart="5dp" android:id="@+id/textView19"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textSize="24sp"
            android:text="@string/kg"
            android:id="@+id/textView18"
            app:layout_constraintStart_toEndOf="@+id/oneRepMax" android:layout_marginStart="5dp"
            app:layout_constraintTop_toBottomOf="@+id/topSetWeight" android:layout_marginTop="10dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textSize="24sp"
            android:text="@string/kg"
            android:id="@+id/textView22"
            app:layout_constraintStart_toEndOf="@+id/totalWeightMoved"
            android:layout_marginStart="5dp" app:layout_constraintTop_toBottomOf="@+id/textView18"
            android:layout_marginTop="10dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textSize="24sp" android:id="@+id/oneRepMax"
            app:layout_constraintStart_toEndOf="@+id/textView23"
            android:layout_marginStart="1dp" app:layout_constraintTop_toBottomOf="@+id/topSetWeight"
            android:layout_marginTop="10dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textSize="24sp" android:id="@+id/totalWeightMoved"
            app:layout_constraintStart_toEndOf="@+id/textView25" app:layout_constraintTop_toBottomOf="@+id/oneRepMax"
            android:layout_marginStart="10dp" android:layout_marginTop="10dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="10dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Display4"
            android:textSize="24sp" android:id="@+id/strengthLevel" app:layout_constraintTop_toTopOf="@+id/guideline14"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="10dp"/>
    <TextView
            android:text="One Rep Max:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="10dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textSize="24sp" android:id="@+id/textView23" app:layout_constraintTop_toBottomOf="@+id/textView24"
            android:layout_marginTop="10dp"/>
    <TextView
            android:text="Total Weight Moved:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="10dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textSize="24sp" android:id="@+id/textView25"
            app:layout_constraintTop_toBottomOf="@+id/textView23" android:layout_marginTop="10dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="10dp"/>
    <androidx.constraintlayout.widget.Guideline
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintGuide_begin="69dp" android:id="@+id/guideline14"/>
</androidx.constraintlayout.widget.ConstraintLayout>