<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:orientation="vertical"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content">

    <ListView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/toolList"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/exerciseName" android:layout_marginTop="10dp"
            app:layout_constraintBottom_toTopOf="@+id/addExercise" style="@style/Widget.AppCompat.ListView"/>
    <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/exerciseName" app:layout_constraintTop_toBottomOf="@+id/textView7"
            android:layout_marginTop="15dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="10dp" android:layout_marginStart="10dp"/>
    <TextView
            android:text="Name"
            android:layout_width="104dp"
            android:layout_height="44dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="10dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="20dp" android:id="@+id/textView7"/>
    <Button
            android:text="Add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/addExercise" android:layerType="none"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="30dp"
            android:onClick="onConfirmExercise" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="10dp"/>
    <Button
            android:text="cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dismissPopup"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="30dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="10dp" android:onClick="onCancelNewExercise"/>
</androidx.constraintlayout.widget.ConstraintLayout>